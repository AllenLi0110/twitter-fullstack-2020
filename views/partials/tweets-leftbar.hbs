<div class="col-2">
  <nav class="tweet-left-bar-selection d-flex align-content-between flex-wrap" style="width:178px; height:1200px;">
    <div class="col" style="width:178px; height:58px;">
      <div class="m-3">
        <a href="/">
          <img src="/images/logo.svg" alt="logo" style="width:40px; height:40px;">
        </a>
      </div>
      <div class="m-3 d-flex align-items-center">
        {{#ifCond route 'tweets'}}
          <img src="/images/home-click.svg" alt="home-click" class="m-2" style="width:24px;height:24px">
        {{else}}
          <img src="/images/home.svg" alt="home" class="m-2" style="width:24px; height:24px;">
        {{/ifCond}}
        <a href="/" class="m-2 text-decoration-none"
          style="color:{{#ifCond route 'tweets'}} #ff6600 
                       {{else}} #44444F 
                       {{/ifCond}};font-size: 18px">首頁</a>
      </div>
      <div class="m-3 d-flex align-items-center">
        {{#ifCond route 'profile'}}
          <img src="/images/profile-click.svg" alt="user-click" class="m-2" style="width:24px;height:24px">
        {{else}}
          <img src="/images/profile.svg" alt="profile" class="m-2" style="width:24px; height:24px;">
        {{/ifCond}}
        <a href="/users/{{user.id}}/tweets" class="m-2 text-decoration-none"
          style="color:{{#ifCond route 'profile'}} #ff6600 
                       {{else}} #44444F 
                       {{/ifCond}};font-size: 18px">個人資料</a>
      </div>
      <div class="m-3 d-flex align-items-center">
        {{#ifCond route 'setting'}}
        <img src="/images/setting-click.svg" alt="setting" class="m-2" style="width:24px;height:24px">
        {{else}}
        <img src="/images/setting.svg" alt="setting" class="m-2" style="width:24px; height:24px;">
        {{/ifCond}}
        <a href="/users/{{user.id}}/setting" class="m-2 text-decoration-none"
          style="color:{{#ifCond route 'setting'}} #ff6600 
                        {{else}} #44444F 
                        {{/ifCond}};font-size: 18px">設定</a>
      </div>
      <div class="mb-4 text-center" data-bs-toggle="modal" data-bs-target="#tweet-modal">
        <button class="btn col-sm-2" type="submit"
          style="color: white;background-color:#ff6600;border-radius: 20px;width:178px; height:46px;">推文</button>
      </div>
    </div>
    <div class="col m-3">
      <img src="/images/logout.svg" alt="logout" class="m-2" style="width:24px; height:24px;">
      <a href="/logout" class="text-decoration-none" style="color: #44444f;font-size:18px">登出</a>
    </div>
  </nav>
</div>