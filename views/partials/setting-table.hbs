<div class="card" style="height:1200px;">
    <div class="setting-table-title border-bottom">
        <h2 class="title text-start m-3">
            <strong class="mr-auto" style="color: black; font-size: 20px;">
            帳戶設定
            </strong>
        </h2>
    </div>
    <div class="d-flex justify-content-center">
        <div class="text-center">
            <form action="/users/{{user.id}}/setting?_method=PUT" method="POST">
            <div class="form-body">
                <div class="form-group form-floating m-4">
                <input type="text" name="editAccount" id="account" class="form-control font-weight-bold" placeholder="請設定帳號"
                    value="{{user.account}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" 
                    required autofocus>
                <label for="account">帳號</label>
                </div>
                <div class="form-group form-floating m-4">
                <input type="text" name="editName" id="name" class="form-control font-weight-bold" placeholder="請設定名稱"
                    value="{{user.name}}" style="background-color:#F5F8FA; border-bottom: 2px solid #657786;" maxlength="50"
                    required>
                <label for="name">名稱</label>
                </div>
                <div class="form-group form-floating m-4">
                <input type="text" name="editEmail" id="email" class="form-control font-weight-bold" placeholder="請設定Email"
                    value="{{user.email}}"
                    style="background-color:#F5F8FA; border-bottom: 2px solid #657786;width:593px;height:54px" required
                    autofocus>
                <label for="Email">Email</label>
                </div>
                <div class="form-group form-floating m-4">
                <input type="password" name="editPassword" id="password" class="form-control font-weight-bold"
                    placeholder="請設定密碼" value="{{user.password}}"
                    style="background-color:#F5F8FA; border-bottom: 2px solid #657786; width:593px;height:54px" required
                    autofocus>
                <label for="password">密碼</label>
                </div>
                <div class="form-group form-floating m-4">
                <input type="password" name="editCheckPassword" id="checkPassword" class="form-control font-weight-bold"
                    placeholder="請再次輸入密碼" value="{{user.password}}"
                    style="background-color:#F5F8FA; border-bottom: 2px solid #657786; width:593px;height:54px" required
                    autofocus>
                <label for="checkPassword">密碼確認</label>
                </div>
                <div class="mb-4 text-end">
                <button class="btn col-sm-2 m-4" type="submit"
                    style='color: white;background-color:#ff6600;margin-left:60px; border-radius: 20px; width:88px;height:46px'>儲存</button>
                </div>
            </form>
        </div>
    </div>
</div>